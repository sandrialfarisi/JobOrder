<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.sandri.joborder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">
        <activity android:name=".RegisterActivity"></activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ListMachineEX.MachineEXActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ListMachineBM.MachineBMActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ListMachineD.MachineDActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ListMachineP.MachinePActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ListMachineSL.MachineSLActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".DashboardActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".DetailActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>